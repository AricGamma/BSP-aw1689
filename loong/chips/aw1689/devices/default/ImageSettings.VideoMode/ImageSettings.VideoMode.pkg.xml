<?xml version="1.0" encoding="utf-8" ?>
<Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
         Owner="$(OEMNAME)" OwnerType="OEM" ReleaseType="Production"
         Platform="Common" Component="ImageSettings" SubComponent="VideoMode">
   <Components>
      <OSComponent>
         <RegKeys>
              <!-- Headless Mode settings -->
              <RegKey KeyName="$(hklm.software)\CurrentControlSet\Control\wininit">
                <!-- value 0 for Headed and 1 for Headess -->
                <RegValue Name="Headless" Value="0" Type="REG_DWORD"/>
              </RegKey>
         </RegKeys>
      </OSComponent>
   </Components>
</Package>
